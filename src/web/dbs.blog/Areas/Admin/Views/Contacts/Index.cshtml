@using dbs.blog.DTOs
@model IEnumerable<ContactDTO>

@{
    ViewData["Title"] = "Contacts";
    ViewData["Breadcrumb"] = "Contacts";
    
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalItems = ViewBag.TotalItems ?? 0;
    var pageSize = ViewBag.PageSize ?? 10;
}

<div class="content-card">
    <div class="card-header">
        <h2 class="card-title">Contacts</h2>
    </div>
    <div class="card-body" style="padding: 0;">
        @if (Model != null && Model.Any())
        {
            <table class="blog-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model)
                    {
                        <tr>
                            <td>
                                <div style="font-weight: 500; color: var(--admin-text);">@contact.Name</div>
                            </td>
                            <td>
                                <div style="color: var(--admin-text-muted);">@contact.Email</div>
                            </td>
                            <td style="color: var(--admin-text-muted); font-size: 14px;">
                                @contact.CreatedAt.ToString("dd MMM yyyy HH:mm")
                            </td>
                            <td>
                                @if (contact.Received)
                                {
                                    <span class="status-badge published" style="text-transform: capitalize;">Viewed</span>
                                }
                                else
                                {
                                    <span class="status-badge draft" style="text-transform: capitalize;">New</span>
                                }
                            </td>
                            <td>
                                <div class="action-btns">
                                    <a asp-action="View" asp-controller="Contacts" asp-area="admin" asp-route-id="@contact.Id" class="action-btn edit" title="View">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                                            <circle cx="12" cy="12" r="3"/>
                                        </svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div style="text-align: center; padding: 40px; color: var(--admin-text-muted);">
                No contacts found.
            </div>
        }
    </div>
    
    @if (totalPages > 1)
    {
        <div class="card-footer" style="padding: 20px; border-top: 1px solid var(--admin-border);">
            <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 16px;">
                <div style="color: var(--admin-text-muted); font-size: 14px;">
                    Showing @((currentPage - 1) * pageSize + 1) to @(Math.Min(currentPage * pageSize, totalItems)) of @totalItems contacts
                </div>
                
                <div class="pagination">
                    @if (currentPage > 1)
                    {
                        <a asp-action="Index" asp-controller="Contacts" asp-area="admin" asp-route-page="@(currentPage - 1)" class="pagination-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="m15 18-6-6 6-6"/>
                            </svg>
                            Previous
                        </a>
                    }
                    
                    <div class="pagination-numbers">
                        @{
                            var startPage = Math.Max(1, currentPage - 2);
                            var endPage = Math.Min(totalPages, currentPage + 2);
                            
                            if (startPage > 1)
                            {
                                <a asp-action="Index" asp-controller="Contacts" asp-area="admin" asp-route-page="1" class="pagination-number">1</a>
                                @if (startPage > 2)
                                {
                                    <span class="pagination-ellipsis">...</span>
                                }
                            }
                            
                            @for (int i = startPage; i <= endPage; i++)
                            {
                                @if (i == currentPage)
                                {
                                    <span class="pagination-number active">@i</span>
                                }
                                else
                                {
                                    <a asp-action="Index" asp-controller="Contacts" asp-area="admin" asp-route-page="@i" class="pagination-number">@i</a>
                                }
                            }
                            
                            if (endPage < totalPages)
                            {
                                @if (endPage < totalPages - 1)
                                {
                                    <span class="pagination-ellipsis">...</span>
                                }
                                <a asp-action="Index" asp-controller="Contacts" asp-area="admin" asp-route-page="@totalPages" class="pagination-number">@totalPages</a>
                            }
                        }
                    </div>
                    
                    @if (currentPage < totalPages)
                    {
                        <a asp-action="Index" asp-controller="Contacts" asp-area="admin" asp-route-page="@(currentPage + 1)" class="pagination-btn">
                            Next
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="m9 18 6-6-6-6"/>
                            </svg>
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

<style>
    .pagination {
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .pagination-btn {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 8px 16px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--admin-border);
        border-radius: var(--admin-radius);
        color: var(--admin-text);
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        transition: var(--admin-transition);
    }
    
    .pagination-btn:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: var(--admin-primary);
        color: var(--admin-primary);
    }
    
    .pagination-btn svg {
        width: 16px;
        height: 16px;
    }
    
    .pagination-numbers {
        display: flex;
        align-items: center;
        gap: 4px;
    }
    
    .pagination-number {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 40px;
        height: 40px;
        padding: 0 12px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--admin-border);
        border-radius: var(--admin-radius);
        color: var(--admin-text);
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        transition: var(--admin-transition);
    }
    
    .pagination-number:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: var(--admin-primary);
        color: var(--admin-primary);
    }
    
    .pagination-number.active {
        background: var(--admin-primary-gradient);
        border-color: var(--admin-primary);
        color: var(--admin-text);
        cursor: default;
    }
    
    .pagination-number.active:hover {
        background: var(--admin-primary-gradient);
        color: var(--admin-text);
    }
    
    .pagination-ellipsis {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 40px;
        height: 40px;
        color: var(--admin-text-muted);
        font-size: 14px;
    }
    
    .card-footer {
        margin-top: 0;
    }
</style>

