@{
    ViewData["Title"] = "Home Page";
}
<!-- start of main -->
<main class="bg-dark relative z-10 pt-[92px] lg:pt-[106px] min-h-[82vh] overflow-hidden">

    <!-- ================= start of banner ================= -->
    <section class="banner homepage-banner">
        <div class="container h-full">
            <div class="row h-full items-center">
                <div class="col-12 text-center">

                    <h1 class="name md:flex items-center flex-wrap justify-center font-secondary" data-aos="fade-up-sm">
                        <span class="inline-block">Dannyllo Souza</span>
                    </h1>

                    <!-- introduction -->
                    <div class="mt-5 md:mt-8 md:text-xl font-light md:max-w-xl mx-auto opacity-80" data-aos="fade-up-sm" data-aos-delay="100">
                        A backend-focused developer who loves building fast, reliable, and clean .NET applications — turning complex problems into simple, scalable solutions.
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ================= end of banner ================= -->

    <!-- ================= start of core techs ================= -->
    <section class="pt-28 lg:pb-10 overflow-hidden">
        <div class="container">
            <div class="row">
                <div class="col-12 mb-10">
                    <!-- Section Title -->
                    <h2 class="text-3xl font-secondary font-medium text-center" data-aos="fade">Core Technologies</h2>
                </div>
                <div class="col-12">
                    <div class="flex justify-center items-center flex-wrap">
                        <div class="mx-4 sm:mx-8 my-4" data-aos="fade-left" data-aos-delay="0">
                            <img width="40" alt="Brand" src="~/images/techs/csharp-logo.png" />
                        </div>
                        <div class="mx-4 sm:mx-8 my-4" data-aos="fade-left" data-aos-delay="0">
                            <img width="40" alt="Brand" src="~/images/techs/net-logo.png" />
                        </div>
                        <div class="mx-4 sm:mx-8 my-4" data-aos="fade-left" data-aos-delay="0">
                            <img width="40" alt="Brand" src="~/images/techs/azure-logo.png" />
                        </div>
                        <div class="mx-4 sm:mx-8 my-4" data-aos="fade-left" data-aos-delay="0">
                            <img width="40" alt="Brand" src="~/images/techs/react-logo.png" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ================= end of core techs ================= -->

    <!-- ================= start of process ================= -->
    <section class="py-28">
        <div class="container">
            <div class="row mb-16 items-end">
                <div class="sm:col-7 order-2 sm:order-1">
                    <!-- Section Title -->
                    <h2 class="text-4xl lg:text-5xl font-secondary font-medium -mt-[6px] text-center sm:text-left">
                        Engineering That Makes Sense
                    </h2>
                </div>
            </div>
            <!-- Work Process Items -->
            <div class="work-process row md:gx-6 gy-6">
                <!-- Process Item -->
                <div class="lg:col-4 md:col-6" data-aos="fade-right" data-aos-delay="0">
                    <div class="work-process-item">
                        <!-- Step Number and Title -->
                        <h3 class="text-2xl sm:text-3xl mb-6 flex items-center">
                            <span>Analyse</span>
                        </h3>
                        <!-- Step Description -->
                        <div class="text-white/75 font-light md:text-lg">
                            Understand the problem deeply, reduce complexity, define a path forward.
                        </div>
                    </div>
                </div>

                <!-- Process Item -->
                <div class="lg:col-4 md:col-6" data-aos="fade-right" data-aos-delay="100">
                    <div class="work-process-item">
                        <!-- Step Number and Title -->
                        <h3 class="text-2xl sm:text-3xl mb-6 flex items-center">
                            <span>Engineer</span>
                        </h3>
                        <!-- Step Description -->
                        <div class="text-white/75 font-light md:text-lg">
                            Build solutions that are practical, scalable and easy to maintain — code with intention.
                        </div>
                    </div>
                </div>

                <!-- Process Item -->
                <div class="lg:col-4 md:col-6" data-aos="fade-right" data-aos-delay="200">
                    <div class="work-process-item">
                        <!-- Step Number and Title -->
                        <h3 class="text-2xl sm:text-3xl mb-6 flex items-center">
                            <span>Improve</span>
                        </h3>
                        <!-- Step Description -->
                        <div class="text-white/75 font-light md:text-lg">
                            Monitor, optimize and iterate. Good software evolves.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ================= end of process ================= -->

    <!-- ================= start of blog/posts ================= -->
    <section class="py-28 bg-white text-dark rounded-b-2xl">
        <div class="container">
            <div class="row mb-16 items-end">
                <div class="sm:col-8 order-2 sm:order-1">
                    <!-- Section Title -->
                    <h2 class="text-black text-4xl lg:text-5xl font-secondary font-medium -mt-[6px] text-center sm:text-left">
                        My weekly thoughts
                    </h2>
                </div>
                <div class="sm:col-4 order-1 sm:order-2 block mb-4 sm:mb-0 text-center sm:text-right">
                    <!-- Section Subtitle -->
                    <span class="font-secondary text-2xl leading-none text-black/75">Blog</span>
                </div>
            </div>
            <!-- Blog Posts -->
            <div class="row md:gx-4 gy-5">
                <!-- Blog Post 1 -->
                <div class="lg:col-4 sm:col-6 init-delay" data-aos="fade-up-sm" data-aos-duration="500" style="--lg-delay:0ms;--md-delay:0ms;--sm-delay:0ms">
                    <article class="relative group text-center">
                        <div class="relative overflow-hidden rounded-lg mb-8">
                            <!-- Blog Post Image -->
                            <img alt="You have no idea how much better you can feel!" loading="lazy" width="620" height="500" class="duration-700 group-hover:scale-110 group-hover:-rotate-1 object-cover w-full rounded-lg group-hover:brightness-75 bg-light/20" src="~/images/blog/01.jpg" />
                        </div>
                        <div class="px-2 sm:px-6 transition-all duration-500 group-hover:opacity-60">
                            <!-- Blog Post Tags and Date -->
                            <div class="flex flex-wrap items-center justify-center mb-4 space-x-5">
                                <span class="inline-block text-sm rounded-full bg-[#efefef] px-3 py-1 capitalize">lifestyle</span>
                                <span class="opacity-75 text-sm">25 May / 2023</span>
                            </div>
                            <!-- Blog Post Title -->
                            <h3 class="text-xl md:text-2xl leading-tight">
                                <a class="stretched-link" href="#">You have no idea how much better you can feel!</a>
                            </h3>
                        </div>
                    </article>
                </div>

                <!-- Blog Post 2 -->
                <div class="lg:col-4 sm:col-6 init-delay" data-aos="fade-up-sm" data-aos-duration="500" style="--lg-delay:75ms;--md-delay:75ms;--sm-delay:75ms">
                    <article class="relative group text-center">
                        <div class="relative overflow-hidden rounded-lg mb-8">
                            <!-- Blog Post Image -->
                            <img alt="The Role of a Developer in Creating Communities" loading="lazy" width="620" height="500" class="duration-700 group-hover:scale-110 group-hover:-rotate-1 object-cover w-full rounded-lg group-hover:brightness-75 bg-light/20" src="~/images/blog/09.jpg" />
                        </div>
                        <div class="px-2 sm:px-6 transition-all duration-500 group-hover:opacity-60">
                            <!-- Blog Post Tags and Date -->
                            <div class="flex flex-wrap items-center justify-center mb-4 space-x-5">
                                <span class="inline-block text-sm rounded-full bg-[#efefef] px-3 py-1 capitalize">post elements</span>
                                <span class="opacity-75 text-sm">23 May / 2023</span>
                            </div>
                            <!-- Blog Post Title -->
                            <h3 class="text-xl md:text-2xl leading-tight">
                                <a class="stretched-link" href="./blog-single.html">The Role of a Developer in Creating Communities</a>
                            </h3>
                        </div>
                    </article>
                </div>

                <!-- Blog Post 3 -->
                <div class="lg:col-4 sm:col-6 init-delay" data-aos="fade-up-sm" data-aos-duration="500" style="--lg-delay:150ms;--md-delay:0ms;--sm-delay:0ms">
                    <article class="relative group text-center">
                        <div class="relative overflow-hidden rounded-lg mb-8">
                            <!-- Blog Post Image -->
                            <img alt="Ways to improve usability and accessibility" loading="lazy" width="620" height="500" class="duration-700 group-hover:scale-110 group-hover:-rotate-1 object-cover w-full rounded-lg group-hover:brightness-75 bg-light/20" src="~/images/blog/12.jpg" />
                        </div>
                        <div class="px-2 sm:px-6 transition-all duration-500 group-hover:opacity-60">
                            <!-- Blog Post Tags and Date -->
                            <div class="flex flex-wrap items-center justify-center mb-4 space-x-5">
                                <span class="inline-block text-sm rounded-full bg-[#efefef] px-3 py-1 capitalize">tech</span>
                                <span class="opacity-75 text-sm">13 May / 2023</span>
                            </div>
                            <!-- Blog Post Title -->
                            <h3 class="text-xl md:text-2xl leading-tight">
                                <a class="stretched-link" href="./blog-single.html">Ways to improve usability and accessibility</a>
                            </h3>
                        </div>
                    </article>
                </div>
            </div>
            <!-- All Posts Button -->
            <div class="text-center mt-16">
                <a class="button button-dark" href="blog.html">
                    <span>All Posts</span>
                </a>
            </div>
        </div>
    </section>
    <!-- ================= end of blog/posts ================= -->
</main>